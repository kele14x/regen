{% for f in block.fields() %}
/* Type = {{ f.access }} */
#define {{ f.symbol() | upper }}_ADDR {{ '0x%x' % f.parent.address }} /* {{ f.parent.address }} */
#define {{ f.symbol() | upper }}_MASK {{ '0x%x' % f.bit_mask }} /* {{ f.bit_mask }} */
#define {{ f.symbol() | upper }}_OFFSET {{ '0x%x' % f.bit_offset }} /* {{ f.bit_offset }} */
#define {{ f.symbol() | upper }}_WIDTH {{ '0x%x' % f.bit_width }} /* {{ f.bit_width }} */
#define {{ f.symbol() | upper }}_DEFAULT {{ '0x%x' % f.reset }} /* {{ f.reset }} */

{% endfor -%}
