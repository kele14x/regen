{% for r in block.registers %}
    {% for f in r.fields %}
/* Type = {{ f.access }} */
#define {{ r.name }}_{{ f.name }}_ADDR {{ '0x%x' % r.address_offset * 4 }} /* {{ r.address_offset * 4 }} */
#define {{ r.name }}_{{ f.name }}_MASK {{ '0x%x' % f.bit_mask }} /* {{ f.bit_mask }} */
#define {{ r.name }}_{{ f.name }}_OFFSET {{ '0x%x' % f.bit_offset }} /* {{ f.bit_offset }} */
#define {{ r.name }}_{{ f.name }}_WIDTH {{ '0x%x' % f.bit_width }} /* {{ f.bit_width }} */
#define {{ r.name }}_{{ f.name }}_DEFAULT {{ '0x%x' % f.reset }} /* {{ f.reset }} */

    {% endfor -%}
{%- endfor -%}
